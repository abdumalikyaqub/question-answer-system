@model IEnumerable<Test_qasysapp.Models.Question>

@{
    ViewData["Title"] = "MyQuestion";
}

<h1>Мои вопросы</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Новый вопрос</a>
</p>
<p>
    <a asp-action="Index" class="btn btn-success">Главная</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Body)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Body)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new {  id=item.Id  }) |
                @Html.ActionLink("Подробное", "Details", new {  id=item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new {  id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
